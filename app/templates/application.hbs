<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2 id="title">Welcome to EmberNote</h2>
    </div>
    <div class="col-md-8">
      {{#if user}}
        Hello, {{user.name}}
      {{/if}}
      {{#unless user}}
        {{#link-to 'register'}}register{{/link-to}}&nbsp;
        {{#link-to 'login'}}login{{/link-to}}
      {{/unless}}
    </div>
  </div>
  <div class="row">
    <div>{{outlet}}</div>
  </div>
</div>
