<div class="container">
  <div class="row">
    <div class="pull-right col-md-4 padding">
      {{#if user}}
        Hello, {{user.name}}
      {{/if}}
      {{#unless user}}
        {{#link-to 'register'}}register{{/link-to}}&nbsp;
        {{#link-to 'login'}}login{{/link-to}}
      {{/unless}}
    </div>
    <div class="col-md-8">
      <h1>Welcome to EmberNote</h1>
    </div>
  </div>
  <div class="row padding">
    <div>
      {{outlet}}
    </div>
  </div>
</div>
